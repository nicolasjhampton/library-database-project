extends layout

block content
  h1 Loans
  p
    a.button(href="/library/loans/new") Create New Loan
  p Filters
    a(href="/library/loans")  All
    span  |
    a(href="/library/loans?status=overdue")  Overdue
    span  |
    a(href="/library/loans?status=checked_out")  Checked Out
  table
    thead
      tr
        th Book
        th Patron
        th Loaned on
        th Return by
        th Returned on
        th Action
    each loan in loans
      include partials/loan

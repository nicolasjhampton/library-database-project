extends layout

block content
  h1 Books
  if errors
    include partials/val_errors
  p
    a.button(href="/library/books/new") Create New Book
  p Filters
    a(href="/library/books")  All
    span  |
    a(href="/library/books?status=overdue")  Overdue
    span  |
    a(href="/library/books?status=checked_out")  Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    if books
      each book in books
        include partials/book
